!!!
%html
  %head
    %title Carswip
    = csrf_meta_tags
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
    %link{ href: "https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i", rel: "stylesheet"}/
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?sensor=false', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag :modernizr, 'data-turbolinks-track': 'reload'
  %body{"data-offset" => "100", "data-target" => "#main-nav-collapse"}
    = render 'layouts/navigation'
    = yield
    = render 'layouts/footer'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
